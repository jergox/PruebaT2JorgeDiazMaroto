<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.usuariodam.jorgediazmaroto.MainPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="8dp"
            app:srcCompat="@drawable/forest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">


            <ImageView
                android:id="@+id/im_fox"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/fox" />

            <TextView
                android:id="@+id/et_mrfox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginLeft="1dp"
                android:fontFamily="@font/amatic_sc"
                android:text="MrFox"
                android:textColor="@android:color/background_dark"
                android:textSize="36sp"
                app:layout_constraintTop_toBottomOf="@+id/logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_desinstal"
                android:layout_width="188dp"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:background="@drawable/button_custom"
                android:text="UNINSTALL"
                android:textColor="@color/colorPrimary" />

            <Button
                android:id="@+id/btn_update"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="#216FED"
                android:text="UPDATE"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/swipeAct"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_margin="10dp"
                    android:background="@android:color/holo_blue_light"
                    android:text="foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!\nfoxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!\nfoxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!\nfoxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!
foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!\nfoxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!\nfoxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!\nfoxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy! foxy!"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light" />

            </ScrollView>

        </android.support.v4.widget.SwipeRefreshLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>